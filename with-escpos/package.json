{
    "name": "react-thermal-printer-escpos-usb",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "concurrently \"pnpm dev:electron\" \"pnpm dev:react\"",
        "dev:react": "vite",
        "dev:electron": "cross-env NODE_ENV=development electron .",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "transpile:electron": "tsc --project src/electron/tsconfig.json",
        "dist:mac": "pnpm transpile:electron && pnpm build && electron-builder --mac --arm64",
        "dist:win": "pnpm transpile:electron && pnpm build && electron-builder --win --x64",
        "dist:linux": "pnpm transpile:electron && pnpm build && electron-builder --linux --x64"
    },
    "dependencies": {
        "@types/ping": "^0.4.4",
        "escpos": "3.0.0-alpha.6",
        "escpos-network": "3.0.0-alpha.5",
        "escpos-usb": "3.0.0-alpha.4",
        "os-utils": "^0.0.14",
        "ping": "^0.4.4",
        "puppeteer": "^24.9.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "usb": "1.9.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@types/escpos": "^2.5.5",
        "@types/os-utils": "^0.0.4",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "electron": "^34.2.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.19.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.18",
        "globals": "^15.14.0",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.22.0",
        "vite": "^6.1.0"
    }
}
